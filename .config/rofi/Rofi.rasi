configuration {
        show-icons:              true;
        icon-theme:              "Papyrus";
        font:                    "JetBrainsNerd 15";
}

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  true;
    x-offset:                    0px;
    y-offset:                    0px;

    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    background-color:            #11111b;
    cursor:                      "default";
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     100px;
    margin:                      0px;
    padding:                     10px 200px;
    background-color:            transparent;
    children:                    [ "inputbar", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
   enabled:                      true;
    spacing:                     10px;
    margin:                      1% 18%;
    padding:                     10px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                #9399b2;
    background-color:            #11111b;
    text-color:                  #cdd6f4;
    children:                    [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
    enabled:                     false;
    expand:                      false;
    padding:                     2px 11px;
    border-radius:               100%;
    str:                         "ï€‚";
    background-color:            transparent;
    text-color:                  inherit;
}
entry {
    enabled:                     true;
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     5;
    lines:                       5;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     0px;
    margin:                      0px;
    padding:                     0px;
    background-color:            transparent;
    text-color:                  #cdd6f4;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     15px;
    margin:                      0px;
    padding:                     20px 10px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  #cdd6f4;
    orientation:                 vertical;
    cursor:                      pointer;
}
element normal.normal {
    background-color:            transparent;
    text-color:                  #cdd6f4;
}
element selected.normal {
    border:                      2px solid;
    border-color:                #89b4fa;
    background-color:            #313244;
    text-color:                  #cdd6f4;
}
element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        55px;
    cursor:                      inherit;
}
element-text {
    background-color:            transparent;
    text-color:                  inherit;
    highlight:                   inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

/*****----- Message -----*****/
error-message {
    padding:                     15px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                #f38ba8;
    background-color:            black / 10%;
    text-color:                  #cdd6f4;
}
textbox {
    background-color:            transparent;
    text-color:                  #cdd6f4;
    vertical-align:              0.5;
    horizontal-align:            0.0;
    highlight:                   none;
}
